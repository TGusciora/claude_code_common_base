          "composition api",
          "script setup",
          "defineAsyncComponent",
          "useFetch",
          "useAsyncData",
          "v-memo",
          "shallowRef",
          "composable",
          "vue performance",
          "vue optimization",
          "nitro",
          "KeepAlive",
          "Teleport",
          "provide inject"
        ],
        "intentPatterns": [
          "(optimize|improve|refactor).*?(vue|nuxt)",
          "(vue|nuxt).*?performance",
          "(build|create).*?(vue|nuxt)",
          "reduce.*?(bundle|rerenders).*?(vue|nuxt)",

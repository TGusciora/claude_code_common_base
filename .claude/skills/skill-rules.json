    "webapp-testing": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Test local web applications using Playwright for browser automation and testing",
      "promptTriggers": {
        "keywords": [
          "playwright",
          "browser test",
          "e2e test",
          "end-to-end test",
          "web testing",
          "ui testing",
          "automation test",
          "browser automation",
          "screenshot test",
          "frontend test"
        ],
        "intentPatterns": [
          "(test|verify|check).*?(web|app|frontend|ui|browser)",
          "playwright.*?(script|test|automation)",
          "browser.*?(test|automation|screenshot)",
          "(e2e|end.to.end).*?test",
          "(take|capture).*?screenshot"
        ]
      },
      "fileTriggers": {

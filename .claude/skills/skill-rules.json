    "vue-best-practices": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Comprehensive Vue 3 and Nuxt 3 performance optimization guide with 40+ rules",
      "promptTriggers": {
        "keywords": [
          "vue",

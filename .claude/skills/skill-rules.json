    "web-artifacts-builder": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Build complex multi-component HTML artifacts with React, Tailwind CSS, and shadcn/ui",
      "promptTriggers": {
        "keywords": [
          "html artifact",
          "react artifact",
          "bundle html",
          "shadcn",
          "multi-component artifact",
          "complex artifact",
          "web artifact",
          "artifact builder"
        ],
        "intentPatterns": [
          "(create|build|make).*?(complex|elaborate).*?artifact",
          "(bundle|generate|create).*?html.*?artifact",
          "artifact.*?(react|shadcn|component)",
          "(build|create).*?artifact.*?(state|routing)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/bundle.html",
          ".claude/skills/web-artifacts-builder/**"
        ],
        "pathExclusions": []
      }
    },
    "react-best-practices": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Comprehensive React and Next.js performance optimization guide with 40+ rules",
      "promptTriggers": {
        "keywords": [
          "react",
          "next.js",
          "nextjs",
          "jsx",

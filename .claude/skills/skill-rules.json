          "react.*?performance",
          "(build|create).*?(react|next)",
          "reduce.*?(bundle|rerenders)",
          "(fix|debug).*?react",
          "react.*?(best practices|optimization)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/*.jsx",
          "**/*.tsx",
          "**/next.config.*",
          "**/app/**/*.tsx",
          "**/pages/**/*.tsx",
          "**/components/**/*.tsx"

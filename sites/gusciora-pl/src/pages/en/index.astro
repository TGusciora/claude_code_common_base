---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Gusciora - Hub"
  description="Gusciora family hub - navigate to family member sites"
  locale="en"
>
  <div class="hub-content">
    <!-- FR-001: Visual hub with two clickable images -->
    <div class="hub-navigation">
      <a href="https://tomasz.gusciora.pl/en/" class="hub-card">
        <div class="hub-image-placeholder" aria-label="Tomasz">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
        <!-- FR-002: Fallback button navigation -->
        <span class="hub-button">Go to Tomasz</span>
      </a>

      <a href="https://adriana.gusciora.pl" class="hub-card">
        <div class="hub-image-placeholder" aria-label="Adriana">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
        <!-- FR-002: Fallback button navigation -->
        <span class="hub-button">Go to Adriana</span>
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .hub-content {
    width: 100%;
    max-width: 800px;
  }

  .hub-navigation {
    display: flex;
    gap: var(--spacing-2xl);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .hub-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-lg);
    text-decoration: none;
    transition: transform var(--transition-normal);
  }

  .hub-card:hover {
    transform: scale(1.05);
    text-decoration: none;
  }

  .hub-image-placeholder {
    width: 200px;
    height: 200px;
    border-radius: var(--radius-xl);
    background: var(--color-surface);
    border: 2px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: border-color var(--transition-normal), box-shadow var(--transition-normal);
  }

  .hub-card:hover .hub-image-placeholder {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
  }

  .hub-button {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-lg);
    background: var(--color-primary);
    color: var(--color-primary-text);
    border-radius: var(--radius-md);
    font-weight: 600;
    transition: background-color var(--transition-fast);
  }

  .hub-card:hover .hub-button {
    background: var(--color-primary-hover);
  }

  @media (max-width: 640px) {
    .hub-navigation {
      flex-direction: column;
      gap: var(--spacing-xl);
    }

    .hub-image-placeholder {
      width: 150px;
      height: 150px;
    }
  }
</style>

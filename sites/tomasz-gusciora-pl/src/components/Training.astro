---
/**
 * Training - Workshop format and offering section
 *
 * Communicates the 2-day remote workshop format clearly.
 */

interface Props {
  locale: 'pl' | 'en';
}

const { locale } = Astro.props;

const content = {
  pl: {
    title: 'Format Szkolenia',
    subtitle: '2-dniowy warsztat zdalny',
    description: 'Intensywny, praktyczny warsztat zaprojektowany dla zespołów deweloperskich. Łączymy teorię z ćwiczeniami na realnych przykładach.',
    features: [
      {
        icon: 'calendar',
        title: '2 dni',
        desc: 'pełnych warsztatów',
      },
      {
        icon: 'video',
        title: 'Zdalnie',
        desc: 'przez video call',
      },
      {
        icon: 'users',
        title: 'Dla zespołów',
        desc: 'do 12 osób',
      },
      {
        icon: 'code',
        title: '80% praktyki',
        desc: 'hands-on coding',
      },
    ],
    includes: 'Co zawiera szkolenie:',
    includesList: [
      'Przygotowanie środowiska przed warsztatem',
      'Materiały szkoleniowe w formie dokumentacji',
      'Ćwiczenia praktyczne na rzeczywistych przykładach',
      'Sesja Q&A po każdym module',
      'Dostęp do materiałów po szkoleniu',
      'Certyfikat ukończenia szkolenia',
    ],
  },
  en: {
    title: 'Training Format',
    subtitle: '2-Day Remote Workshop',
    description: 'Intensive, practical workshop designed for development teams. We combine theory with exercises on real-world examples.',
    features: [
      {
        icon: 'calendar',
        title: '2 days',
        desc: 'of full workshops',
      },
      {
        icon: 'video',
        title: 'Remote',
        desc: 'via video call',
      },
      {
        icon: 'users',
        title: 'For teams',
        desc: 'up to 12 people',
      },
      {
        icon: 'code',
        title: '80% practice',
        desc: 'hands-on coding',
      },
    ],
    includes: "What's included:",
    includesList: [
      'Environment setup before the workshop',
      'Training materials in documentation form',
      'Practical exercises on real-world examples',
      'Q&A session after each module',
      'Access to materials after training',
      'Certificate of completion',
    ],
  },
};

const t = content[locale];

const icons: Record<string, string> = {
  calendar: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>',
  video: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="23 7 16 12 23 17 23 7"></polygon><rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect></svg>',
  users: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>',
  code: '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>',
};
---

<section class="training" id="training">
  <div class="container">
    <h2 class="section-title">{t.title}</h2>
    <p class="training-subtitle">{t.subtitle}</p>
    <p class="training-description">{t.description}</p>

    <div class="features-grid">
      {t.features.map((feature) => (
        <div class="feature-card">
          <div class="feature-icon" set:html={icons[feature.icon]} />
          <div class="feature-text">
            <strong>{feature.title}</strong>
            <span>{feature.desc}</span>
          </div>
        </div>
      ))}
    </div>

    <div class="includes-section">
      <h3>{t.includes}</h3>
      <ul class="includes-list">
        {t.includesList.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
  .training {
    padding: var(--spacing-3xl) 0;
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .section-title {
    text-align: center;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .training-subtitle {
    text-align: center;
    font-size: var(--text-xl);
    color: var(--color-primary);
    font-weight: 600;
    margin-bottom: var(--spacing-md);
  }

  .training-description {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--spacing-2xl);
    color: var(--color-text-secondary);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
  }

  .feature-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    text-align: center;
    transition: box-shadow var(--transition-fast);
  }

  .feature-card:hover {
    box-shadow: var(--shadow-md);
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto var(--spacing-md);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon :global(svg) {
    width: 32px;
    height: 32px;
  }

  .feature-text {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .feature-text strong {
    font-size: var(--text-lg);
    color: var(--color-text);
  }

  .feature-text span {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .includes-section {
    max-width: 600px;
    margin: 0 auto;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
  }

  .includes-section h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }

  .includes-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--spacing-sm);
  }

  .includes-list li {
    position: relative;
    padding-left: var(--spacing-lg);
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
  }

  .includes-list li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--color-success);
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .features-grid {
      grid-template-columns: 1fr;
    }

    .feature-card {
      display: flex;
      align-items: center;
      text-align: left;
      gap: var(--spacing-md);
      padding: var(--spacing-md);
    }

    .feature-icon {
      margin: 0;
      flex-shrink: 0;
    }
  }
</style>

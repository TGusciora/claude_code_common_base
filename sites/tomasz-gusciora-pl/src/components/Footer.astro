---
/**
 * Footer - Site footer with social links
 *
 * Features:
 * - Links to demystifai.blog, Substack, LinkedIn
 * - Icon-based navigation
 * - PL/EN locale support
 */

interface Props {
  locale: 'pl' | 'en';
}

const { locale } = Astro.props;

const content = {
  pl: {
    copyright: '© 2026 Tomasz Gusciora. Wszelkie prawa zastrzeżone.',
    blogLabel: 'Blog demystifAI',
    substackLabel: 'Newsletter na Substack',
    linkedinLabel: 'Profil LinkedIn',
  },
  en: {
    copyright: '© 2026 Tomasz Gusciora. All rights reserved.',
    blogLabel: 'demystifAI Blog',
    substackLabel: 'Substack Newsletter',
    linkedinLabel: 'LinkedIn Profile',
  },
};

const t = content[locale];

const links = [
  {
    href: 'https://demystifai.blog',
    label: t.blogLabel,
    icon: 'blog',
  },
  {
    href: 'https://demystifai.substack.com',
    label: t.substackLabel,
    icon: 'substack',
  },
  {
    href: 'https://www.linkedin.com/in/tgusciora/',
    label: t.linkedinLabel,
    icon: 'linkedin',
  },
];
---

<footer class="site-footer">
  <div class="container footer-content">
    <div class="footer-links">
      {links.map((link) => (
        <a
          href={link.href}
          class="footer-link"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={link.label}
          title={link.label}
        >
          {link.icon === 'blog' && (
            <svg class="footer-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
            </svg>
          )}
          {link.icon === 'substack' && (
            <svg class="footer-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z" />
            </svg>
          )}
          {link.icon === 'linkedin' && (
            <svg class="footer-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          )}
        </a>
      ))}
    </div>

    <p class="footer-copyright">{t.copyright}</p>
  </div>
</footer>

<style>
  .site-footer {
    padding: var(--spacing-2xl) 0;
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .footer-links {
    display: flex;
    gap: var(--spacing-lg);
  }

  .footer-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: var(--radius-full);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-primary);
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .footer-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .footer-copyright {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
    text-align: center;
  }

  @media (max-width: 640px) {
    .site-footer {
      padding: var(--spacing-xl) 0;
    }

    .footer-links {
      gap: var(--spacing-md);
    }
  }
</style>

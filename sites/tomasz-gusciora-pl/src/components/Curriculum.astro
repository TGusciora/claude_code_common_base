const day1Modules = t.modules.slice(0, 4);
const day2Modules = t.modules.slice(4, 8);
---

<section class="curriculum" id="curriculum">
  <div class="container">
    <h2 class="section-title">{t.title}</h2>
    <p class="curriculum-subtitle">{t.subtitle}</p>

    <div class="curriculum-grid">
      <div class="day-column">
        <h3 class="day-title">{t.day1}</h3>
        <div class="modules-list">
          {day1Modules.map((mod) => (
            <div class="module-card">
              <div class="module-header">
                <div class="module-icon" set:html={icons[mod.icon]} />
                <span class="module-id">{mod.id}</span>
              </div>
              <h4 class="module-title">{mod.title}</h4>
              <p class="module-desc">{mod.desc}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="day-column">
        <h3 class="day-title">{t.day2}</h3>
        <div class="modules-list">
          {day2Modules.map((mod) => (
            <div class="module-card">
              <div class="module-header">
                <div class="module-icon" set:html={icons[mod.icon]} />
                <span class="module-id">{mod.id}</span>
              </div>
              <h4 class="module-title">{mod.title}</h4>
              <p class="module-desc">{mod.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .curriculum {
    padding: var(--spacing-3xl) 0;
  }

  .section-title {
    text-align: center;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .curriculum-subtitle {
    text-align: center;
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-2xl);
  }

  .curriculum-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-2xl);
  }

  .day-column {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .day-title {
    font-size: var(--text-xl);
    color: var(--color-primary);
    padding-bottom: var(--spacing-sm);
    border-bottom: 2px solid var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .modules-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .module-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    transition: all var(--transition-fast);
  }

  .module-card:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--color-primary);
  }

  .module-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .module-icon {
    width: 32px;
    height: 32px;
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .module-icon :global(svg) {
    width: 24px;
    height: 24px;
  }

  .module-id {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-muted);
    background: var(--color-bg-secondary);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
  }

  .module-title {
    font-size: var(--text-base);
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }

  .module-desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .curriculum-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }
  }

  @media (max-width: 480px) {
    .module-card {
      padding: var(--spacing-md);
    }

    .module-title {
      font-size: var(--text-sm);
    }
  }
</style>

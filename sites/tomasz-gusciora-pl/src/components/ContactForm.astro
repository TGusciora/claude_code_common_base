---
/**
 * ContactForm - Polished contact form with modern styling
 *
 * Features:
 * - Floating label inputs
 * - Animated focus states
 * - Form validation feedback
 * - Gradient accent border
 */

interface Props {
  locale: 'pl' | 'en';
}

const { locale } = Astro.props;

const content = {
  pl: {
    sectionLabel: 'Kontakt',
    title: 'Porozmawiajmy',
    subtitle: 'Masz pytania o szkolenie? Napisz do mnie - odpowiadam na wszystkie wiadomości.',
    namePlaceholder: 'Twoje imię',
    emailPlaceholder: 'Twój email',
    messagePlaceholder: 'O czym chciałbyś porozmawiać?',
    submit: 'Wyślij wiadomość',
    sending: 'Wysyłanie...',
    success: 'Dziękuję! Odpowiem najszybciej jak to możliwe.',
    error: 'Coś poszło nie tak. Spróbuj ponownie lub napisz bezpośrednio na tomasz@demystifai.blog',
    required: 'To pole jest wymagane',
    invalidEmail: 'Podaj prawidłowy adres email',
    directContact: 'lub napisz bezpośrednio',
  },
  en: {
    sectionLabel: 'Contact',
    title: "Let's Talk",
    subtitle: 'Questions about the training? Send me a message - I respond to all inquiries.',
    namePlaceholder: 'Your name',
    emailPlaceholder: 'Your email',
    messagePlaceholder: 'What would you like to discuss?',
    submit: 'Send Message',
    sending: 'Sending...',
    success: "Thank you! I'll respond as soon as possible.",
    error: 'Something went wrong. Please try again or email tomasz@demystifai.blog directly.',
    required: 'This field is required',
    invalidEmail: 'Please enter a valid email address',
    directContact: 'or email directly',
  },
};

const t = content[locale];
const FORMSPARK_FORM_ID = 'U4CWD0kpO';
---

<section class="contact section" id="contact">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="section-label">
        <span class="label-line"></span>
        <span class="label-text">{t.sectionLabel}</span>
      </div>
      <h2 class="section-title">{t.title}</h2>
      <p class="section-subtitle">{t.subtitle}</p>
    </div>

    <div class="contact-wrapper">
      <form
        class="contact-form"
        action={`https://submit-form.com/${FORMSPARK_FORM_ID}`}
        method="POST"
        data-success={t.success}
        data-error={t.error}
        data-sending={t.sending}
        data-submit={t.submit}
      >
        <!-- Honeypot -->
        <input type="text" name="_honeypot" class="honeypot" tabindex="-1" autocomplete="off" />
        <input type="hidden" name="_redirect" value="false" />

        <div class="form-grid">
          <div class="form-group">
            <input
              type="text"
              id="name"
              name="name"
              class="form-input"
              placeholder=" "
              required
              autocomplete="name"
            />
            <label for="name" class="form-label">{t.namePlaceholder}</label>
            <div class="input-border"></div>
          </div>

          <div class="form-group">
            <input
              type="email"
              id="email"
              name="email"
              class="form-input"
              placeholder=" "
              required
              autocomplete="email"
            />
            <label for="email" class="form-label">{t.emailPlaceholder}</label>
            <div class="input-border"></div>
          </div>
        </div>

        <div class="form-group">
          <textarea
            id="message"
            name="message"
            class="form-input form-textarea"
            placeholder=" "
            rows="5"
            required
          ></textarea>
          <label for="message" class="form-label">{t.messagePlaceholder}</label>
          <div class="input-border"></div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary form-submit">
            <span class="btn-text">{t.submit}</span>
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="22" y1="2" x2="11" y2="13"/>
              <polygon points="22 2 15 22 11 13 2 9 22 2"/>
            </svg>
          </button>
        </div>

        <div class="form-status" aria-live="polite"></div>
      </form>

      <div class="direct-contact">
        <span class="direct-label">{t.directContact}</span>
        <a href="mailto:tomasz@demystifai.blog" class="direct-email">
          tomasz@demystifai.blog
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--color-bg-secondary);
    position: relative;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .label-line {
    width: 48px;
    height: 2px;
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
  }

  .label-text {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-primary);
  }

  .section-title {
    margin-bottom: var(--spacing-md);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 500px;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
  }

  /* Form Wrapper */
  .contact-wrapper {
    max-width: 640px;
    margin: 0 auto;
  }

  .contact-form {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-2xl);
    box-shadow: var(--shadow-lg);
  }

  .honeypot {
    position: absolute;
    left: -9999px;
    top: -9999px;
    opacity: 0;
    pointer-events: none;
  }

  /* Form Grid */
  .form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  /* Form Group */
  .form-group {
    position: relative;
    margin-bottom: var(--spacing-lg);
  }

  .form-grid .form-group {
    margin-bottom: 0;
  }

  .form-input {
    width: 100%;
    padding: var(--spacing-lg) var(--spacing-md) var(--spacing-sm);
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text);
    background: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
    outline: none;
  }

  .form-input:hover {
    border-color: var(--color-border-hover);
  }

  .form-input:focus {
    border-color: var(--color-primary);
    background: var(--color-surface);
  }

  .form-textarea {
    resize: vertical;
    min-height: 140px;
  }

  /* Floating Label */
  .form-label {
    position: absolute;
    left: var(--spacing-md);
    top: 50%;
    transform: translateY(-50%);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    pointer-events: none;
    transition: all var(--transition-fast);
    background: transparent;
    padding: 0 var(--spacing-xs);
  }

  .form-textarea + .form-label {
    top: var(--spacing-lg);
    transform: none;
  }

  .form-input:focus + .form-label,
  .form-input:not(:placeholder-shown) + .form-label {
    top: 0;
    transform: translateY(-50%);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-primary);
    background: var(--color-surface);
  }

  .form-input:focus ~ .form-label,
  .form-input:not(:placeholder-shown) ~ .form-label {
    top: 0;
    transform: translateY(-50%);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-primary);
    background: var(--color-surface);
  }

  .form-textarea:focus + .form-label,
  .form-textarea:not(:placeholder-shown) + .form-label {
    top: 0;
    transform: translateY(-50%);
  }

  /* Input Border Accent */
  .input-border {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--gradient-primary);
    transition: all var(--transition-normal);
    border-radius: var(--radius-full);
    transform: translateX(-50%);
  }

  .form-input:focus ~ .input-border {
    width: calc(100% - 4px);
  }

  /* Form Actions */
  .form-actions {
    display: flex;
    justify-content: flex-start;
  }

  .form-submit {
    padding: var(--spacing-md) var(--spacing-2xl);
  }

  .btn-icon {
    width: 18px;
    height: 18px;
    transition: transform var(--transition-fast);
  }

  .form-submit:hover .btn-icon {
    transform: translate(4px, -4px);
  }

  /* Form Status */
  .form-status {
    text-align: center;
    font-size: var(--text-base);
    padding: var(--spacing-md);
    border-radius: var(--radius-lg);
    display: none;
    margin-top: var(--spacing-lg);
  }

  .form-status.success {
    display: block;
    background: var(--color-success-subtle);
    color: var(--color-success);
    border: 1px solid var(--color-success);
  }

  .form-status.error {
    display: block;
    background: var(--color-error-subtle);
    color: var(--color-error);
    border: 1px solid var(--color-error);
  }

  /* Direct Contact */
  .direct-contact {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-xl);
    font-size: var(--text-sm);
  }

  .direct-label {
    color: var(--color-text-muted);
  }

  .direct-email {
    color: var(--color-primary);
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .form-grid {
      grid-template-columns: 1fr;
    }

    .contact-form {
      padding: var(--spacing-lg);
    }

    .form-submit {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const forms = document.querySelectorAll<HTMLFormElement>('.contact-form');

    forms.forEach((form) => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const submitBtn = form.querySelector<HTMLButtonElement>('.form-submit');
        const btnText = submitBtn?.querySelector('.btn-text');
        const statusEl = form.querySelector<HTMLElement>('.form-status');

        if (!submitBtn || !statusEl || !btnText) return;

        const successMsg = form.dataset.success || 'Success!';
        const errorMsg = form.dataset.error || 'Error. Please try again.';
        const sendingMsg = form.dataset.sending || 'Sending...';
        const submitMsg = form.dataset.submit || 'Send';

        submitBtn.disabled = true;
        btnText.textContent = sendingMsg;
        statusEl.className = 'form-status';
        statusEl.textContent = '';

        try {
          const formData = new FormData(form);
          const jsonData: Record<string, string> = {};
          formData.forEach((value, key) => {
            jsonData[key] = value.toString();
          });
          const response = await fetch(form.action, {
            method: 'POST',
            body: JSON.stringify(jsonData),
            headers: {
              'Content-Type': 'application/json',
              Accept: 'application/json',
            },
          });

          if (response.ok) {
            statusEl.className = 'form-status success';
            statusEl.textContent = successMsg;
            form.reset();
          } else {
            throw new Error('Form submission failed');
          }
        } catch {
          statusEl.className = 'form-status error';
          statusEl.textContent = errorMsg;
        } finally {
          submitBtn.disabled = false;
          btnText.textContent = submitMsg;
        }
      });
    });
  });
</script>
